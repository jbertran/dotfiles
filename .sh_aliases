alias cdw='cd ~/git/work'
alias cdf='cd ~/git/fac'

# Long commands
alias alert='paplay /usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga'

# Go up a given number of directories
up() {
    local d=""
    limit=$1
    for ((i=1 ; i <= limit ; i++))
    do
	d=$d/..
    done
    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
	d=..
    fi
    cd $d
}

# Play a sound - do it after long commands!


# Create a directory if inexistant
# cd to it either way
mkcd() {
    mkdir -p $1 && cd $1
}

less() {
    if command -v pygmentize > /dev/null; then
        pygmentize $1 > /dev/null 2>&1
        if [ $? -eq 0 ]; then
            pygmentize $1 | less -R
        else
            command less $1
        fi
    else
        command less $1
    fi
}
