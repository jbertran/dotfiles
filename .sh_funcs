# Go up a given number of directories
up() {
    local d=""
    limit=$1
    for ((i=1 ; i <= limit ; i++))
    do
	d=$d/..
    done
    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
	d=..
    fi
    cd $d
}

# Create a directory if inexistant
# cd to it either way
mkcd() {
    mkdir -p $1 && cd $1
}
