# Aliases available for `sudo` execution
alias sudo='sudo '

# Emacs
alias e='emacsclient -c'
alias enw='emacsclient -t'
alias emacsk="emacsclient -t -e '(kill-emacs)'"

# Typo prevention
alias l='ls -la --color=auto'
alias sl='ls --color=auto'
alias la='ls -a --color=auto'
alias lla='ls -la --color=auto'

# Command colors
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# git
alias cdp='cd ~/git/perso'
alias cdw='cd ~/git/work'
alias gst='git status'

# Useful shit
alias grn='grep -rn'
alias tailf='tail -f'
alias pgrep='pgrep -l'
alias dexec='docker exec -i -t'

# Source default python venv without headaches
alias svenv='source venv/bin/activate'

# Long commands
alias alert='paplay /usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga'

# One-line logs for a given number of commits away from HEAD
gl() {
    history_size=$1;
    git log  --pretty=oneline | head -n $history_size
}

# Go up a given number of directories
up() {
    local d=""
    limit=$1
    for ((i=1 ; i <= limit ; i++))
    do
	      d=$d/..
    done
    d=$(echo $d | sed 's@^/@@')
    if [ -z "$d" ]; then
	      d=..
    fi
    cd $d
}

resetvirtualenv() {
    VENV=$1
    workon $VENV
    deactivate
    rmvirtualenv $VENV
    mkvirtualenv $VENV
}

# Source the virtual env created by tox target
sourcetox() {
    local target=$1
    source ".tox/$1/bin/activate"
}

# Create a directory if inexistant
# cd to it either way
mkcd() {
    mkdir -p $1 && cd $1
}

catp() {
    if command -v pygmentize > /dev/null; then
        pygmentize $1 > /dev/null 2>&1
        command cat $1
    else
        command cat $1
    fi
}

##### WORK ALIASES #####
ring() {
    if [ -z $1 ]; then
       cd "/home/jbertran/git/work/ring"
    else
        version_path="/home/jbertran/git/work/versions"
        version=$1;
        cd $version_path/ring-$version
    fi
}
